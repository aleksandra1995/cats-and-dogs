<!DOCTYPE html>
<html>
  <head>
    <title>CatsAndDogs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'bulma', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <div class="navbar">
      <figure class="image is-64x64">
        <img class="is-rounded" src="<%=(url_for(@current_cat.avatar))%>">
      </figure>
    </div>


    <% if @logged_in%>
      <%= button_to "logout", "/logout", method: :delete %>
    <% end %>

    <% if @current_cat %>
      Logged in as: <%= link_to @current_cat.username, cat_path(@current_cat.id) %>
    <% end %>

    <% if @current_dog%>
      Welcome back, <%= @current_dog.username %>
    <% end %>

    </header>
    <%= yield %>
  </body>
</html>
